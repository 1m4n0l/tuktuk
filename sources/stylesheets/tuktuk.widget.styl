@import "__constants.styl"

.scroll
  overflow-x: hidden
  overflow-y: scroll
  -webkit-overflow-scrolling: touch
  -webkit-box-flex: 1

  &.horizontal
    overflow-x: scroll
    overflow-y: hidden
    white-space: nowrap

.clear
  clear: both
.on-left
  float: left
.on-right
  float: right
.block
  display: block
.inline
  display: inline-block
.none
  display: none

dimension = 20px
.margin-none
  margin: 0
.margin
  margin: dimension
.margin-left
  margin-left: dimension
.margin-right
  margin-right: dimension
.margin-top
  margin-top: dimension
.margin-bottom
  margin-bottom: dimension

.padding-none
  padding: 0
.padding
  padding: dimension
.padding-left
  padding-left: dimension
.padding-right
  padding-right: dimension
.padding-top
  padding-top: dimension
.padding-bottom
  padding-bottom: dimension



/* ================== IMAGE & MEDIA ================== */
img
  border: 0
  -ms-interpolation-mode: bicubic

  &.responsive
    width: 100%
    height: auto
    &.rounded
      border-radius 50%

/* ================== TAGs ================== */
:not(.icon).tag
  position: relative
  padding: 3px 4px
  font-size: 9px !important
  line-height: 1.0em
  text-transform: uppercase
