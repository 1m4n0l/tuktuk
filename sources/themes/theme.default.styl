@import "../components/CSSmethods/vendor.styl"
@import url("http://fonts.googleapis.com/css?family=Open+Sans:200,300,400,700")
@import url("http://fonts.googleapis.com/css?family=Lato:100,300,400,700")

COLOR           = #34495e
THEME           = #1ABC9C
SECONDARY       = #ECF0F1
SUCCESS         = #2ECC71
ALERT           = #E74C3C


bck_lightest    = #fff
bck_light       = #ECF0F1
bck_dark        = COLOR
bck_darkest     = #2C3E50

TRANSITION      = 400ms
BORDER-RADIUS   = 4px

aside_light_anchor = darken(bck_lightest, 15%)
aside_dark_header  = bck_darkest
aside_dark_anchor  = lighten(bck_dark, 15%)



body
  color: COLOR
  font-size: 14px
  font-family: "-Lato", "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight: 400

  & > header
    & nav a
      color: rgba(255,255,255,0.5)
      &:hover, &:active
        color: #fff

  & hr
    border-style: solid
    border-color: bck_light
    margin: 20px 0
    padding: 0

  & .radius
    border-radius: BORDER-RADIUS

  /* ====================== NAVIGATION ====================== */
  & nav
    &.group a
      border-radius BORDER-RADIUS
      color: #fff
      & > .icon
          opacity: 0.6
      &:hover
        background: rgba(0,0,0,0.2)
      &:active, &.active
        background: THEME


  /* ====================== BACKGROUNDS ====================== */
  & .bck
    &.lightest
      background-color: bck_lightest
    &.light
      background-color: bck_light
    &.dark
      background-color: bck_dark
    &.darkest
      background-color: bck_darkest
    &.theme
      background-color: THEME
    &.alert
      background-color: ALERT !important
    &.theme
      background-color: THEME

  /* ================================= TEXT ================================ */
  & .text
    &.shadow
      text-shadow 0 1px 1px rgba(0,0,0,0.5)
  & .color
    &.white
      color: #fff
    &.theme
      color: THEME

  /* ====================== FORM ====================== */
  & form, .form
    FORM_BORDER = #dce4ec
    & input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], select, textarea
      background-color: #fff
      color: COLOR
      border: 2px solid FORM_BORDER
      border-radius BORDER-RADIUS
      transition border-color TRANSITION
      &.error, &:required
        border-color: ALERT !important
        color: ALERT
      &:focus
        border-color: THEME

    & .select:after
      color: FORM_BORDER

     & input[type="checkbox"], input[type="radio"]
      background: #fff
      border: 2px solid FORM_BORDER
      &:checked
        border-color: THEME
        &:after
          color: THEME
     & input[type="checkbox"]
      border-radius BORDER-RADIUS


  & [data-control="checkbox"]
    RADIUS = BORDER-RADIUS * 5
    background: darken(bck_light, 25%)
    color: darken(bck_light, 5%)
    font-weight: 700
    border-radius: RADIUS
    & label
      border-radius: RADIUS
      background: darken(bck_light, 50%)
    &.checked
      background-color: THEME
      color: #fff !important
      & label
        background-color: darken(THEME, 25%)

  /* ====================== TABLE ====================== */
  & table
    background: #fff
    color: COLOR
    border: 1px solid lighten(COLOR, 75%)
    border-radius BORDER-RADIUS
    & tr
      &:nth-child(even) td
        background-color: lighten(COLOR, 95%)
    & th
      background-color: lighten(COLOR, 75%)
      color: #FFF
    & td
      &.highlight
        background-color: THEME !important
        color: #fff

  /* ====================== BUTTONS ====================== */
  & .button, button
    color: white
    font-weight: 600
    &:not(.transparent)
      background-color: THEME
      border-radius BORDER-RADIUS
      transition box-shadow TRANSITION
      &:hover
        box-shadow inset 0 0 128px rgba(255,255,255,0.6)
      &:active
        box-shadow inset 0 0 128px rgba(0,0,0,0.2)
      &.secondary
        background-color: darken(SECONDARY, 25%)
        color: SECONDARY
       &.success
        background-color: SUCCESS
       &.alert
        background-color: ALERT

    &.transparent
      background: none !important

    &.large
      font-weight: 500


  /* ====================== BUTTONS ====================== */
  & a
    color: THEME

  /* ====================== TAGs ====================== */
  & :not(.icon).tag
    color: #fff !important
    border: solid 1px rgba(0,0,0,0.1)
    border-radius 2px

[data-tuktuk="modal"]
  & header
    background: THEME !important
    color: #fff

  /* ====================== ASIDE ====================== */


[data-tuktuk=boxes]
  /* ====================== ASIDE ====================== */
  & > aside
    &:not(.dark)
      color: lighten(COLOR, 15%)
      & a:not(.button)
        color: lighten(COLOR, 25%)
      & hr
        background: aside_light_anchor

    &.dark
      &
        color: lighten(bck_dark, 90%)
      & a:not(.button)
        color: #fff
      & hr
        background: #444

    & a:not(.button)
      &:hover, &:active, &.active
          color: THEME

    &  header
      color: #fff
      box-shadow: inset 0 -1px 0 rgba(0,0,0,0.1)

  /* ====================== SECTION ====================== */
  & > section
    box-shadow: inset 1px 0 0 rgba(0,0,0,0.025)
    & header
      border-bottom: dotted 1px aside_light_anchor

  /* ====================== NAVIGATION ====================== */
  & nav
    &[data-filter] > a:not(.button)
      border-radius 2px
      color: lighten(COLOR, 40%)
      &:hover, &:active, &.active
        color: text
        background: darken(bck_light, 5%)
        box-shadow 0 -1px 0 darken(bck_light, 20%), 0 1px 0 lighten(bck_light, 80%)

    &[data-link] > a > .icon
      color: aside_light_anchor

    & > a > small
      opacity: 0.5


  & aside footer, section > footer
      background: rgba(0,0,0,0.1)

  /* ====================== MENU ====================== */
  & [data-menu] > a:not(.button)
    aside.light &
      border-bottom: dotted 1px aside_light_anchor
      &:first-child
        border-top: dotted 1px aside_light_anchor
    aside.dark &
      border-bottom: dotted 1px aside_dark_anchor
      &:first-child
        border-top: dotted 1px aside_dark_anchor

