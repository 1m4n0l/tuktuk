@import "../components/CSSmethods/vendor.styl"
@import url("http://fonts.googleapis.com/css?family=Open+Sans:200,300,400,700")

text            = #111
color           = #FF6666
color_secondary = #BFBFBF

bck_lightest    = #fff
bck_light       = #f7f7f7
bck_dark        = #383838
bck_darkest     = #181818

BORDER-RADIUS   = 1px


COLOR = color
aside_light_anchor = darken(bck_lightest, 15%)
aside_dark_header  = bck_darkest
aside_dark_anchor  = lighten(bck_dark, 15%)

body
  color: text
  font-size: 14px
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight: 400

  & > header
    &.solid
      background: #111
    & nav a
      color: rgba(255,255,255,0.5)
      &:hover, &:active
        color: #fff

  & > section
    &.underline
      border-bottom: solid #bbb 1px


  & hr
    border-style: solid
    border-color: bck_light
    margin: 20px 0
    padding: 0

  /* ====================== NAVIGATION ====================== */
  & nav
    &.group a
      border-left: solid #ccc 1px
      &, & > .icon
        color: #888
      &:hover, &:active, &.active
        color: #000
        background: white
        & > .icon
          color: #000
      &:last-child
        border-right: solid #ccc 1px

  /* ====================== BACKGROUNDS ====================== */
  & .bck
    &.lightest
      background-color: bck_lightest
    &.light
      background-color: bck_light
    &.dark
      background-color: bck_dark
    &.darkest
      background-color: bck_darkest
    &.theme
      background-color: color

  /* ====================== TEXT ====================== */
  & .text
    &.shadow
      text-shadow 0 1px 1px rgba(0,0,0,0.5)
    &.color
      &.white
        color: #fff
      &.theme
        color: color
      &.secondary
        color: color_secondary


  /* ====================== FORM ====================== */
  & form, .form
    & input[type="text"], input[type="password"], input[type="date"], input[type="datetime"], input[type="email"], input[type="number"], input[type="search"], input[type="tel"], input[type="time"], input[type="url"], select, textarea
      background-color: white
      color: rgba(0, 0, 0, 0.75)
      border: 1px solid #ddd
      box-shadow inset 0 1px 2px rgba(0, 0, 0, 0.1)
      &.error, &:required
        border-color: color_cancel
        color: color_cancel
        background-color: rgba(198, 15, 19, 0.1)
      &:focus
        background: #FAFAFA;
        border-color: #B3B3B3;
        color: rgba(0, 0, 0, 0.75)


  & [data-control="checkbox"]
    FORM_color = #ccc
    THEME = blue

    background: color_secondary
    color: darken(color_secondary, 25%)
    font-weight: 700
    border-radius: (BORDER-RADIUS * 2)
    & label
      border-radius: (BORDER-RADIUS * 2)
      background: darken(FORM_color, 25%)
    &.checked
      background-color: color
      color: #fff !important
      & label
        background-color: darken(color, 25%)

  /* ====================== TABLE ====================== */
  & table
    background: #fff
    color: #333
    border: 1px solid #ddd;
    border-radius 3px
    & tr
      &:nth-child(even) td
        background-color: #F9F9F9
    & th
      background-color: #eee
      color: #222
    & td
      &.highlight
        background-color: color !important
        color: #fff

  /* ====================== BUTTONS ====================== */
  & .button, button
    background-color: color
    color: white
    font-weight: 600

    &:not(.transparent)
      border-radius 1px
      box-shadow inset 0 1px 0 rgba(255,255,255,0.2)
      border: solid 1px rgba(0,0,0,0.1)
      &:active
        box-shadow inset 0 0 128px rgba(0,0,0,0.25)
        border-color: none
      &.secondary
        background-color: color_secondary
        color: #666
        text-shadow: 0 1px 0 rgba(255,255,255,0.25)
    &.transparent
      background: none !important
    &.large
      font-weight: 500


  /* ====================== BUTTONS ====================== */
  & a
    color: color
    opacity: 0.9
    &:hover, &:active
      opacity: 1.0

  /* ====================== TAGs ====================== */
  & :not(.icon).tag
    color: #fff !important
    border: solid 1px rgba(0,0,0,0.1)
    border-radius 2px

[data-tuktuk="modal"]
  & header
    background: color !important
    color: #fff

  /* ====================== ASIDE ====================== */


[data-tuktuk=boxes]
  /* ====================== ASIDE ====================== */
  & > aside
    &.light
      background: bck_lightest
      &
        color: lighten(text, 15%)
      & a:not(.button)
        color: lighten(text, 25%)
      & hr
        background: aside_light_anchor

    &.dark
      background: bck_dark
      &
        color: lighten(bck_dark, 90%)
      & a:not(.button)
        color: #fff
      & hr
        background: #444

    & a:not(.button)
      &:hover, &:active, &.active
          color: color

  /* ====================== SECTION ====================== */
  & > section
    background: bck_light
    box-shadow: inset 4px 0 0 rgba(0,0,0,0.025)

  /* ====================== NAVIGATION ====================== */
  & nav
    &[data-filter] > a:not(.button)
      border-radius 2px
      color: lighten(text, 40%)
      &:hover, &:active, &.active
        color: text
        background: darken(bck_light, 5%)
        box-shadow 0 -1px 0 darken(bck_light, 20%), 0 1px 0 lighten(bck_light, 80%)

    &[data-link] > a > .icon
      color: aside_light_anchor

    & > a > small
      opacity: 0.5

  /* ====================== HEADER/FOOTER ====================== */
  & header
    aside.light &
      background-color: COLOR
      box-shadow inset 0 1px 0 lighten(COLOR, 25%), inset 0 -1px 0 darken(COLOR, 20%)
      color: #fff
    aside.dark &
      background: color = aside_dark_header
      box-shadow: inset 0 -1px 0 aside_dark_anchor
    section > &
        border-bottom: dotted 1px aside_light_anchor

  & footer
    aside &, section > &
      background: rgba(0,0,0,0.1)

  /* ====================== ARTICLE ====================== */
  & article
    aside.light &
      box-shadow inset -1px 0 0 aside_light_anchor

  /* ====================== MENU ====================== */
  & [data-menu] > a:not(.button)
    aside.light &
      border-bottom: dotted 1px aside_light_anchor
      &:first-child
        border-top: dotted 1px aside_light_anchor
    aside.dark &
      border-bottom: dotted 1px aside_dark_anchor
      &:first-child
        border-top: dotted 1px aside_dark_anchor

