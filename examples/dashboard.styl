.thumb
  margin-bottom: 24px
  & > .preview
    width: 100%
    height: 160px
    background: #ddd
  & > a
    display: block
    padding: 4px
    line-height: 16px
    font-size: 0.8em

    & > .avatar
      width: 16px
      height: 16px
      margin-right: 2px

.avatars
  & > img
    width: 31px
    height: 31px
    margin: 0px 1px 1px 0px
